{
  "name": "React Scuba Cluster Development",
  "version": "1.0.0",
  
  // Use Docker Compose for cluster environment
  "dockerComposeFile": ["docker-compose.yml"],
  "service": "node-bootstrap",
  "workspaceFolder": "/workspace",

  // Features for development
  "features": {
    "ghcr.io/devcontainers/features/nix:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  // Environment variables
  "remoteEnv": {
    "NODE_ENV": "development",
    "API_PORT": "3000",
    "DB_HOST": "postgres-db",
    "DB_PORT": "5432",
    "CACHE_HOST": "memcached",
    "CACHE_PORT": "11211",
    "REDIS_HOST": "redis",
    "REDIS_PORT": "6379"
  },

  // Forward ports for services
  "forwardPorts": [
    3000,
    3001,
    5173,
    5174,
    5432,
    3306,
    11211,
    6379,
    9090,
    3000,
    8080
  ],

  "portsAttributes": {
    "3000": {
      "label": "API Server",
      "onAutoForward": "notify"
    },
    "5173": {
      "label": "Vite Dev Server",
      "onAutoForward": "notify"
    },
    "9090": {
      "label": "Prometheus",
      "onAutoForward": "notify"
    },
    "3000": {
      "label": "Grafana",
      "onAutoForward": "notify"
    }
  },

  // Mounts for workspace
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/node/.ssh,type=bind,consistency=cached"
  ],

  // Poststart commands
  "postStartCommand": "npm run dev --filter=@react-scuba/web",

  // VS Code extensions
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-vscode.remote-explorer",
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "github.github-vscode-theme",
        "ms-azuretools.vscode-docker",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "redhat.vscode-yaml",
        "ms-vscode.makefile-tools",
        "ms-azuretools.vscode-azureterraform"
      ],
      "settings": {
        "docker.showStartPage": false,
        "remote.localPortHost": "localhost",
        "[javascript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        },
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        },
        "search.exclude": {
          "**/node_modules": true,
          "**/.next": true,
          "**/dist": true,
          "**/build": true
        }
      }
    }
  },

  // Container creation options
  "runArgs": [
    "--network=mcp-cluster",
    "--cap-add=SYS_PTRACE",
    "--security-opt=seccomp=unconfined"
  ],

  // Lifecycle hooks
  "remoteUser": "node",
  "updateRemoteUserUID": false
}
