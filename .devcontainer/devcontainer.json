{
  "name": "React Scuba MCP Development Environment",
  "dockerComposeFile": [
    "../docker-compose.yml",
    "../docker-compose.mcp-persistent.yml"
  ],
  "runServices": [
    "python-mcp-sidecar",
    "mcp-discovery-agent"
  ],
  "service": "node-tools",
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22",
      "nodeGypDependencies": true
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest",
      "ppa": true
    },
    "ghcr.io/devcontainers/features/nvidia-cuda:2": {
      "installToolkit": true,
      "cudaVersion": "12.6"
    },
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
      "version": "latest",
      "helm": "latest",
      "minikube": "latest"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "enableNonRootDocker": "true"
    }
  },

  "hostRequirements": {
    "gpu": "optional"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "ms-playwright.playwright",
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "python.defaultInterpreterPath": "/usr/local/bin/python3",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "github.copilot.chat.mcp.servers": {
          "filesystem": {
            "type": "stdio",
            "command": "docker",
            "args": [
              "run",
              "-i",
              "--rm",
              "--name",
              "filesystem-mcp",
              "--network",
              "mcp-cluster",
              "-v",
              "${workspaceFolder}:/workspace:ro",
              "-v",
              "filesystem-node-cache:/cache/node",
              "mcp-filesystem:latest"
            ]
          },
          "git": {
            "type": "stdio",
            "command": "docker",
            "args": [
              "run",
              "-i",
              "--rm",
              "--name",
              "git-mcp",
              "--network",
              "mcp-cluster",
              "-v",
              "${workspaceFolder}:/repos",
              "-v",
              "git-cache:/cache/git",
              "-v",
              "git-pip-cache:/cache/pip",
              "-v",
              "git-python-cache:/cache/python",
              "mcp-git:latest"
            ]
          },
          "fetch": {
            "type": "stdio",
            "command": "docker",
            "args": [
              "run",
              "-i",
              "--rm",
              "--name",
              "fetch-mcp",
              "--network",
              "mcp-cluster",
              "-v",
              "fetch-cache:/cache/fetch",
              "-v",
              "fetch-pip-cache:/cache/pip",
              "-v",
              "fetch-python-cache:/cache/python",
              "-v",
              "fetch-http-cache:/cache/http",
              "mcp-fetch:latest"
            ]
          },
          "github": {
            "type": "stdio",
            "command": "docker",
            "args": [
              "run",
              "-i",
              "--rm",
              "--name",
              "github-mcp",
              "--network",
              "mcp-cluster",
              "-e",
              "GITHUB_TOKEN=${env:GITHUB_TOKEN}",
              "-e",
              "GITHUB_DYNAMIC_TOOLSETS=1",
              "-v",
              "github-mcp-cache:/cache/github",
              "-v",
              "github-mcp-data:/app/data",
              "ghcr.io/github/github-mcp-server:latest",
              "stdio"
            ]
          },
          "memory": {
            "type": "stdio",
            "command": "docker",
            "args": [
              "run",
              "-i",
              "--rm",
              "--name",
              "memory-mcp",
              "--network",
              "mcp-cluster",
              "-v",
              "memory-data:/memory",
              "-v",
              "memory-node-cache:/cache/node",
              "-v",
              "memory-cache:/cache/memory",
              "mcp-memory:latest"
            ]
          },
          "discovery": {
            "type": "stdio",
            "command": "docker",
            "args": [
              "run",
              "-i",
              "--rm",
              "--name",
              "discovery-mcp",
              "--network",
              "mcp-cluster",
              "-v",
              "mcp-discovery-cache:/cache/discovery",
              "mcp-discovery:latest"
            ]
          },
          "markitdown": {
            "type": "stdio",
            "command": "docker",
            "args": [
              "run",
              "-i",
              "--rm",
              "--name",
              "markitdown-mcp",
              "--network",
              "mcp-cluster",
              "-v",
              "${workspaceFolder}/data:/data:rw",
              "-v",
              "markitdown-cache:/cache/markitdown",
              "mcp-markitdown:latest"
            ]
          },
          "python": {
            "type": "stdio",
            "command": "docker",
            "args": [
              "run",
              "-i",
              "--rm",
              "--name",
              "python-mcp",
              "--network",
              "mcp-cluster",
              "-v",
              "${workspaceFolder}/data:/data:rw",
              "-v",
              "python-exp-cache:/cache/python",
              "mcp-python:latest"
            ]
          }
        }
      }
    }
  },

  "forwardPorts": [3000, 5432, 3306, 5173, 8080],
  "portsAttributes": {
    "3000": {
      "label": "GitHub MCP",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    },
    "3306": {
      "label": "MariaDB",
      "onAutoForward": "silent"
    },
    "5173": {
      "label": "Vite Dev Server",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Application",
      "onAutoForward": "notify"
    }
  },

  "remoteUser": "vscode",
  "containerEnv": {
    "NODE_ENV": "development"
  }
}
