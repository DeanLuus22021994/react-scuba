{
    "image": "node:22-slim",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {},
        "ghcr.io/devcontainers/features/nvidia-cuda:2.0.0": {
            "installToolkit": true
        },
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "mounts": [
        "source=react-scuba-node_modules,target=${containerWorkspaceFolder}/node_modules,type=volume"
    ],
    "hostRequirements": {
        "cpus": 2,
        "memory": "4gb",
        "storage": "8gb",
        "gpu": "optional"
    },
    "waitFor": "onCreateCommand",
    "updateContentCommand": "npm install --legacy-peer-deps",
    "postCreateCommand": "",
    "postStartCommand": "git config --global --unset-all safe.directory || true && git config --global --add safe.directory ${containerWorkspaceFolder}",
    "postAttachCommand": "",
    "customizations": {
        "codespaces": {
            "openFiles": [
                "src/App.jsx"
            ]
        },
        "vscode": {
            "extensions": [
                "GitHub.copilot-chat",
                "GitHub.copilot",
                "esbenp.prettier-vscode",
                "redhat.vscode-yaml",
                "ms-vscode.copilot-mermaid-diagram",
                "ms-vscode.vscode-copilot-vision",
                "ms-vscode.vscode-websearchforcopilot",
                "vscjava.migrate-java-to-azure",
                "vscjava.vscode-java-upgrade",
                "dbaeumer.vscode-eslint",
                "github.vscode-github-actions",
                "GitHub.vscode-pull-request-github",
                "christian-kohler.npm-intellisense",
                "Orta.vscode-jest",
                "VisualStudioExptTeam.intellicode-api-usage-examples",
                "yzhang.markdown-all-in-one",
                "DavidAnson.vscode-markdownlint"
            ]
        }
    },
    "portsAttributes": {
        "3001": {
            "label": "Application",
            "onAutoForward": "openPreview"
        }
    },
    "forwardPorts": [
        3001
    ]
}
