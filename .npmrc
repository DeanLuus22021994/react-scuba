# GPU-Optimized Container Configuration for React Scuba
# Bleeding Edge Build with RTX Acceleration - October 29, 2025

# Performance Optimizations
engine-strict=true
fund=false
legacy-peer-deps=false
audit=false
progress=false

# Exact Version Strategy (no ranges for reproducibility)
save-exact=true
package-lock=true

# Container Optimizations
cache=.npm-cache
tmp=.tmp/npm

# GPU Build Optimizations
script-shell=/bin/bash
ignore-scripts=false
foreground-scripts=true

# Network Optimizations for Container
registry=https://registry.npmjs.org/
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000
fetch-timeout=300000

# Parallel Processing for GPU
maxsockets=50
concurrent-connections=15

# Security for Container Environment
audit-level=moderate
