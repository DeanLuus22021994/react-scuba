{
  "$schema": "./schemas/architecture.schema.json",
  "version": "1.0.0",
  "architecture": {
    "type": "monorepo",
    "build_system": "npm-workspaces",
    "package_manager": "npm"
  },
  "applications": [
    {
      "name": "web",
      "type": "frontend",
      "technology": "React 19.2 + Vite 7.1",
      "port": 5173
    },
    {
      "name": "api",
      "type": "backend",
      "technology": "Express.js 5.0",
      "port": 3001
    },
    {
      "name": "content",
      "type": "content",
      "technology": "Node.js Content Provider"
    }
  ],
  "packages": [
    {
      "name": "config",
      "purpose": "Shared tooling configurations (Native Language Servers, TypeScript, etc.)",
      "shared": true
    },
    {
      "name": "types",
      "purpose": "TypeScript type definitions shared across applications",
      "shared": true
    },
    {
      "name": "ui",
      "purpose": "Shared React components and design system",
      "shared": true
    },
    {
      "name": "utils",
      "purpose": "Shared utility functions and helpers",
      "shared": true
    }
  ],
  "deployment": {
    "containerized": true,
    "orchestration": "docker-compose",
    "cloud_providers": ["azure", "aws", "vercel"]
  }
}