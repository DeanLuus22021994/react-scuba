{
  "$schema": "./schemas/multi-tenant.schema.json",
  "version": "1.0.0",
  "multi_tenancy": {
    "isolation_level": "application",
    "tenant_resolution": ["subdomain", "domain", "environment"],
    "configuration_method": "hybrid"
  },
  "tenants": [
    {
      "id": "di-authority-johannesburg",
      "name": "DI Authority Johannesburg",
      "domain": "di-authority.co.za",
      "subdomain": "app",
      "features": {
        "booking": true,
        "courses": true,
        "equipment": true,
        "certification": true
      },
      "theme": {
        "primary_color": "#1e40af",
        "secondary_color": "#3b82f6",
        "font_family": "Inter"
      }
    },
    {
      "id": "ocean-spirit-mauritius",
      "name": "Ocean Spirit Mauritius",
      "domain": "oceanspirit.mu",
      "subdomain": "booking",
      "features": {
        "booking": true,
        "courses": false,
        "equipment": true,
        "certification": false
      },
      "theme": {
        "primary_color": "#059669",
        "secondary_color": "#10b981",
        "font_family": "Poppins"
      }
    }
  ],
  "content_resolution": {
    "strategy": "fallback",
    "asset_handling": "hybrid"
  }
}