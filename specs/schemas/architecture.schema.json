{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Architecture Specification Schema",
  "description": "Schema for validating React Scuba architecture documentation",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "architecture": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["monorepo", "microservices", "serverless"]
        },
        "build_system": {
          "type": "string",
          "enum": ["turbo", "lerna", "nx", "rush"]
        },
        "package_manager": {
          "type": "string",
          "enum": ["npm", "yarn", "pnpm"]
        }
      },
      "required": ["type", "build_system", "package_manager"]
    },
    "applications": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["frontend", "backend", "api", "content", "docs"]
          },
          "technology": {
            "type": "string"
          },
          "port": {
            "type": "integer",
            "minimum": 1000,
            "maximum": 65535
          }
        },
        "required": ["name", "type", "technology"]
      }
    },
    "packages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "purpose": {
            "type": "string"
          },
          "shared": {
            "type": "boolean"
          }
        },
        "required": ["name", "purpose", "shared"]
      }
    },
    "deployment": {
      "type": "object",
      "properties": {
        "containerized": {
          "type": "boolean"
        },
        "orchestration": {
          "type": "string",
          "enum": ["docker-compose", "kubernetes", "docker-swarm"]
        },
        "cloud_providers": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["aws", "azure", "gcp", "vercel", "netlify"]
          }
        }
      },
      "required": ["containerized", "orchestration"]
    }
  },
  "required": ["version", "architecture", "applications", "packages", "deployment"]
}