{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Bleeding Edge Technology Specification Schema",
  "description": "Schema for validating bleeding-edge technology stack specifications",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "technology_stack": {
      "type": "object",
      "properties": {
        "frontend": {
          "type": "object",
          "properties": {
            "react": {
              "type": "string",
              "pattern": "^19\\."
            },
            "vite": {
              "type": "string",
              "pattern": "^7\\."
            },
            "typescript": {
              "type": "string",
              "pattern": "^5\\.9"
            },
            "routing": {
              "type": "string",
              "enum": ["react-router-v7", "next-router", "reach-router"]
            },
            "state_management": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["zustand", "redux-toolkit", "jotai", "valtio"]
              }
            },
            "styling": {
              "type": "string",
              "enum": ["tailwind-v4", "emotion", "styled-components", "css-modules"]
            }
          },
          "required": ["react", "vite", "typescript", "routing", "state_management", "styling"]
        },
        "backend": {
          "type": "object",
          "properties": {
            "runtime": {
              "type": "string",
              "enum": ["node", "deno", "bun"]
            },
            "framework": {
              "type": "string",
              "enum": ["express-v5", "fastify", "koa", "hono"]
            },
            "database": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["postgresql-17", "mariadb-11", "sqlite", "mongodb"]
              }
            }
          },
          "required": ["runtime", "framework", "database"]
        },
        "tooling": {
          "type": "object",
          "properties": {
            "monorepo": {
              "type": "string",
              "pattern": "^npm-workspaces\\."
            },
            "linting": {
              "type": "string",
              "enum": ["biome", "eslint", "rome"]
            },
            "testing": {
              "type": "object",
              "properties": {
                "unit": {
                  "type": "string",
                  "enum": ["vitest", "jest", "node-test"]
                },
                "e2e": {
                  "type": "string",
                  "enum": ["playwright", "cypress", "puppeteer"]
                }
              },
              "required": ["unit", "e2e"]
            }
          },
          "required": ["monorepo", "linting", "testing"]
        }
      },
      "required": ["frontend", "backend", "tooling"]
    },
    "performance": {
      "type": "object",
      "properties": {
        "build_time": {
          "type": "object",
          "properties": {
            "fresh_build_target": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?s$"
            },
            "cached_build_target": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?ms$"
            }
          },
          "required": ["fresh_build_target", "cached_build_target"]
        },
        "bundle_size": {
          "type": "object",
          "properties": {
            "target_gzip": {
              "type": "string",
              "pattern": "^\\d+(\\.\\d+)?(kb|mb)$"
            },
            "code_splitting": {
              "type": "boolean"
            }
          },
          "required": ["target_gzip", "code_splitting"]
        }
      },
      "required": ["build_time", "bundle_size"]
    }
  },
  "required": ["version", "technology_stack", "performance"]
}
