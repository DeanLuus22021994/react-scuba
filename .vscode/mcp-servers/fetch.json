{
  "servers": {
    "fetch": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--name",
        "fetch-mcp-server",
        "--security-opt=no-new-privileges:true",
        "--cap-drop=ALL",
        "--cap-add=NET_BIND_SERVICE",
        "--cpus=1.0",
        "--memory=1g",
        "--memory-reservation=512m",
        "--pids-limit=50",
        "--network",
        "mcp-cluster",
        "--network-alias",
        "fetch-mcp",
        "--dns=172.28.0.1",
        "--dns-search=mcp-cluster.local",
        "--dns-opt=ndots:2",
        "--stop-timeout=20",
        "--restart=unless-stopped",
        "--tmpfs=/tmp:rw,noexec,nosuid,size=200m",
        "-p",
        "9097:9090",
        "-v",
        "react_scuba_fetch-cache:/cache/fetch:rw,Z",
        "-v",
        "react_scuba_fetch-pip-cache:/cache/pip:rw,Z",
        "-v",
        "react_scuba_fetch-python-cache:/cache/python:rw,Z",
        "-v",
        "react_scuba_fetch-http-cache:/cache/http:rw,Z",
        "-e",
        "HTTP2_ENABLED=1",
        "-e",
        "NETWORK_TIMEOUT=30000",
        "-e",
        "PYTHONUNBUFFERED=1",
        "-e",
        "OTEL_EXPORTER_OTLP_ENDPOINT=http://tempo:4317",
        "-e",
        "OTEL_SERVICE_NAME=fetch-mcp-server",
        "-e",
        "LOG_LEVEL=info",
        "-e",
        "LOG_FORMAT=json",
        "mcp-fetch:latest"
      ]
    }
  }
}