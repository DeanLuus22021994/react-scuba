{
  "servers": {
    "memory": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--name",
        "memory-mcp-server",
        "--security-opt=no-new-privileges:true",
        "--cap-drop=ALL",
        "--user",
        "node:node",
        "--cpus=1.0",
        "--memory=4g",
        "--memory-reservation=2g",
        "--pids-limit=100",
        "--device-read-bps=/dev/nvme0n1:100mb",
        "--device-write-bps=/dev/nvme0n1:50mb",
        "--blkio-weight=500",
        "--network",
        "mcp-cluster",
        "--network-alias",
        "memory-mcp",
        "--dns=172.28.0.1",
        "--stop-timeout=30",
        "--restart=unless-stopped",
        "--tmpfs=/tmp:rw,noexec,nosuid,size=500m",
        "-p",
        "9095:9090",
        "-v",
        "react_scuba_memory-data:/memory:rw,Z",
        "-v",
        "react_scuba_memory-node-cache:/cache/node:rw,Z",
        "-v",
        "react_scuba_memory-cache:/cache/memory:rw,Z",
        "-e",
        "NODE_ENV=production",
        "-e",
        "NODE_OPTIONS=--max-old-space-size=4096 --enable-source-maps --experimental-json-modules",
        "-e",
        "MEMORY_STORAGE_PATH=/memory",
        "-e",
        "MEMORY_CACHE_PATH=/cache/memory",
        "-e",
        "MEMORY_MAX_SIZE=2048",
        "-e",
        "MEMORY_GC_INTERVAL=30000",
        "-e",
        "OTEL_EXPORTER_OTLP_ENDPOINT=http://tempo:4317",
        "-e",
        "OTEL_SERVICE_NAME=memory-mcp-server",
        "-e",
        "LOG_LEVEL=info",
        "-e",
        "LOG_FORMAT=json",
        "mcp-memory:latest"
      ]
    }
  }
}