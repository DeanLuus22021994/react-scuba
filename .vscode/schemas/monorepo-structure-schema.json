{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/DeanLuus22021994/react-scuba/schemas/monorepo-structure",
  "title": "React Scuba Monorepo Structure Schema",
  "description": "Schema for validating monorepo structure configuration in monorepo.yml",
  "type": "object",
  "required": ["name", "root", "structure", "metadata"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Monorepo project name",
      "pattern": "^[a-z0-9-]+$"
    },
    "root": {
      "type": "string",
      "description": "Root directory path for the monorepo",
      "pattern": "^\\.\\/[a-zA-Z0-9_-]+$"
    },
    "structure": {
      "type": "object",
      "required": ["apps", "packages", "required_files"],
      "properties": {
        "apps": {
          "type": "array",
          "description": "Workspace application directories",
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "minItems": 1
        },
        "packages": {
          "type": "array",
          "description": "Shared package directories",
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "minItems": 1
        },
        "required_files": {
          "type": "array",
          "description": "Files required at monorepo root",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "workspace_configs": {
          "type": "object",
          "description": "Required config files per workspace",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["description", "version", "workspaces"],
      "properties": {
        "description": {
          "type": "string",
          "description": "Monorepo description"
        },
        "version": {
          "type": "string",
          "description": "Monorepo version",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "workspaces": {
          "type": "array",
          "description": "Workspace glob patterns",
          "items": {
            "type": "string",
            "pattern": "^[a-z]+\\/\\*$"
          },
          "minItems": 1
        }
      }
    }
  }
}