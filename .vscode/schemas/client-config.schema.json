{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://react-scuba.com/schemas/client-config.schema.json",
  "title": "React Scuba Client Configuration",
  "description": "Schema for multi-tenant client configuration in React Scuba platform",
  "type": "object",
  "required": ["tenant", "company", "contact", "branding", "seo", "features"],
  "properties": {
    "_template": {
      "type": "string",
      "description": "Template identifier (metadata only)"
    },
    "_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version"
    },
    "_updated": {
      "type": "string",
      "format": "date",
      "description": "Last update date"
    },
    "tenant": {
      "type": "object",
      "required": ["id", "slug", "name", "status"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$",
          "description": "UUID v4 identifier"
        },
        "slug": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$",
          "description": "URL-safe identifier (lowercase, hyphens only)"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100
        },
        "status": {
          "type": "string",
          "enum": ["active", "inactive", "suspended"]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "company": {
      "type": "object",
      "required": ["name", "tagline", "description"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100
        },
        "tagline": {
          "type": "string",
          "maxLength": 200
        },
        "description": {
          "type": "string",
          "maxLength": 500
        },
        "about": {
          "type": "string",
          "maxLength": 2000
        },
        "coreValues": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "certifications": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "established": {
          "type": "integer",
          "minimum": 1900,
          "maximum": 2100
        }
      }
    },
    "contact": {
      "type": "object",
      "required": ["phone", "email", "address"],
      "properties": {
        "phone": {
          "type": "string",
          "pattern": "^\\+?[1-9]\\d{1,14}$"
        },
        "whatsapp": {
          "type": "string",
          "pattern": "^\\+?[1-9]\\d{1,14}$"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "address": {
          "type": "object",
          "required": ["street", "city", "country"],
          "properties": {
            "street": {
              "type": "string"
            },
            "city": {
              "type": "string"
            },
            "postalCode": {
              "type": "string"
            },
            "country": {
              "type": "string"
            },
            "coordinates": {
              "type": "object",
              "properties": {
                "latitude": {
                  "type": "number",
                  "minimum": -90,
                  "maximum": 90
                },
                "longitude": {
                  "type": "number",
                  "minimum": -180,
                  "maximum": 180
                }
              }
            }
          }
        },
        "businessHours": {
          "type": "object",
          "patternProperties": {
            "^(monday|tuesday|wednesday|thursday|friday|saturday|sunday)$": {
              "type": "object",
              "properties": {
                "open": {
                  "type": "string",
                  "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$"
                },
                "close": {
                  "type": "string",
                  "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$"
                },
                "closed": {
                  "type": "boolean"
                }
              }
            }
          }
        }
      }
    },
    "branding": {
      "type": "object",
      "required": ["logo", "favicon", "colors"],
      "properties": {
        "logo": {
          "type": "string",
          "format": "uri-reference"
        },
        "favicon": {
          "type": "string",
          "format": "uri-reference"
        },
        "heroImage": {
          "type": "string",
          "format": "uri-reference"
        },
        "colors": {
          "type": "object",
          "required": ["primary"],
          "properties": {
            "primary": {
              "type": "string",
              "pattern": "^#[0-9A-Fa-f]{6}$"
            },
            "secondary": {
              "type": "string",
              "pattern": "^#[0-9A-Fa-f]{6}$"
            }
          }
        }
      }
    },
    "seo": {
      "type": "object",
      "required": ["title", "description", "baseUrl"],
      "properties": {
        "title": {
          "type": "string",
          "maxLength": 60
        },
        "description": {
          "type": "string",
          "maxLength": 160
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "baseUrl": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "features": {
      "type": "object",
      "properties": {
        "booking": {
          "type": "boolean",
          "default": true
        },
        "gallery": {
          "type": "boolean",
          "default": true
        },
        "blog": {
          "type": "boolean",
          "default": false
        },
        "testimonials": {
          "type": "boolean",
          "default": true
        },
        "multiCurrency": {
          "type": "boolean",
          "default": false
        },
        "whatsappWidget": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "team": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "role"],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "role": {
            "type": "string"
          },
          "bio": {
            "type": "string",
            "maxLength": 500
          },
          "certifications": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "image": {
            "type": "string",
            "format": "uri-reference"
          }
        }
      }
    },
    "courses": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "level", "price", "currency"],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "level": {
            "type": "string",
            "enum": ["beginner", "intermediate", "advanced"]
          },
          "price": {
            "type": "number",
            "minimum": 0
          },
          "currency": {
            "type": "string",
            "pattern": "^[A-Z]{3}$"
          },
          "duration": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "image": {
            "type": "string",
            "format": "uri-reference"
          }
        }
      }
    },
    "diveSites": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "description", "difficulty"],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "difficulty": {
            "type": "string",
            "enum": ["beginner", "intermediate", "advanced"]
          },
          "depth": {
            "type": "object",
            "properties": {
              "min": {
                "type": "number"
              },
              "max": {
                "type": "number"
              },
              "unit": {
                "type": "string",
                "enum": ["meters", "feet"]
              }
            }
          },
          "coordinates": {
            "type": "object",
            "properties": {
              "latitude": {
                "type": "number"
              },
              "longitude": {
                "type": "number"
              }
            }
          },
          "marineLife": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "gallery": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "src", "alt"],
        "properties": {
          "id": {
            "type": "string"
          },
          "src": {
            "type": "string",
            "format": "uri"
          },
          "alt": {
            "type": "string"
          },
          "category": {
            "type": "string"
          }
        }
      }
    },
    "social": {
      "type": "object",
      "properties": {
        "facebook": {
          "type": "string",
          "format": "uri"
        },
        "instagram": {
          "type": "string",
          "format": "uri"
        },
        "twitter": {
          "type": "string",
          "format": "uri"
        },
        "youtube": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "pricing": {
      "type": "object",
      "properties": {
        "defaultCurrency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$"
        },
        "currencies": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[A-Z]{3}$"
          }
        }
      }
    }
  }
}
