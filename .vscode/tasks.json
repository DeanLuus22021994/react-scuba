{
  "version": "2.0.0",
  "tasks": [
    // ===========================
    // JavaScript/TypeScript Tasks
    // ===========================
    {
      "label": "npm: lint",
      "type": "npm",
      "script": "lint",
      "problemMatcher": ["$eslint-stylish"],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": false,
        "clear": true,
        "echo": true,
        "showReuseMessage": false
      },
      "options": {
        "cwd": "${workspaceFolder}/server"
      }
    },
    {
      "label": "npm: lint:fix",
      "type": "npm",
      "script": "lint:fix",
      "problemMatcher": ["$eslint-stylish"],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": false,
        "clear": true,
        "echo": true,
        "showReuseMessage": false
      },
      "options": {
        "cwd": "${workspaceFolder}/server"
      }
    },
    {
      "label": "npm: format:check",
      "type": "npm",
      "script": "format:check",
      "problemMatcher": [],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": false,
        "clear": true,
        "echo": true,
        "showReuseMessage": false
      },
      "options": {
        "cwd": "${workspaceFolder}/server"
      }
    },
    {
      "label": "npm: format",
      "type": "npm",
      "script": "format",
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "focus": false,
        "clear": true,
        "echo": true,
        "showReuseMessage": false
      },
      "options": {
        "cwd": "${workspaceFolder}/server"
      }
    },
    {
      "label": "Build Project",
      "type": "process",
      "command": "pwsh.exe",
      "args": ["-c", "npm run build"],
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": false,
        "clear": true
      }
    },
    {
      "label": "Build Production",
      "type": "process",
      "command": "pwsh.exe",
      "args": ["-c", "npm run build:prod"],
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true,
        "clear": true
      }
    },
    {
      "label": "Build & Analyze",
      "type": "process",
      "command": "pwsh.exe",
      "args": ["-c", "npm run build:analyze"],
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true,
        "clear": true
      }
    },
    {
      "label": "npm: test",
      "type": "npm",
      "script": "test",
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": false,
        "clear": true,
        "echo": true,
        "showReuseMessage": false
      },
      "options": {
        "cwd": "${workspaceFolder}/server"
      }
    },
    {
      "label": "npm: test:coverage",
      "type": "npm",
      "script": "test:coverage",
      "problemMatcher": [],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "clear": true,
        "echo": true,
        "showReuseMessage": false
      },
      "options": {
        "cwd": "${workspaceFolder}/server"
      }
    },
    {
      "label": "npm: dev",
      "type": "npm",
      "script": "dev",
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "pattern": {
          "regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Local:.*http",
          "endsPattern": "ready in"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "clear": false,
        "echo": true,
        "showReuseMessage": false
      },
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "runOptions": {
        "instanceLimit": 1
      }
    },
    {
      "label": "Full Quality Check",
      "dependsOn": ["Lint & Format Check", "npm: test", "npm: build"],
      "dependsOrder": "sequence",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true,
        "clear": true
      }
    },
    {
      "label": "Python: Setup",
      "type": "shell",
      "command": "powershell",
      "args": ["-ExecutionPolicy", "Bypass", "-File", "setup-python.ps1"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": false,
        "clear": true,
        "echo": true,
        "showReuseMessage": false
      }
    },
    {
      "label": "Python: Ruff Lint",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "--python",
        "3.14t",
        "ruff",
        "check",
        "docker-compose-examples/mcp/python_utils/",
        "--config",
        "docker-compose-examples/mcp/python_utils/pyproject.toml"
      ],
      "problemMatcher": {
        "owner": "ruff",
        "source": "ruff",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^(.+?):(\\d+):(\\d+):\\s*(\\w+)\\s*(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": false,
        "clear": true,
        "echo": true,
        "showReuseMessage": false
      }
    },
    {
      "label": "Python: Ruff Fix",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "--python",
        "3.14t",
        "ruff",
        "check",
        "--fix",
        "docker-compose-examples/mcp/python_utils/",
        "--config",
        "docker-compose-examples/mcp/python_utils/pyproject.toml"
      ],
      "problemMatcher": {
        "owner": "ruff",
        "source": "ruff",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^(.+?):(\\d+):(\\d+):\\s*(\\w+)\\s*(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": false,
        "clear": true,
        "echo": true,
        "showReuseMessage": false
      }
    },
    {
      "label": "Python: isort Check",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "--python",
        "3.14t",
        "isort",
        "--check-only",
        "--diff",
        "--settings-path",
        "docker-compose-examples/mcp/python_utils/pyproject.toml",
        "docker-compose-examples/mcp/python_utils/"
      ],
      "problemMatcher": [],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": false,
        "clear": true,
        "echo": true,
        "showReuseMessage": false
      }
    },
    {
      "label": "Python: isort Fix",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "--python",
        "3.14t",
        "isort",
        "--settings-path",
        "docker-compose-examples/mcp/python_utils/pyproject.toml",
        "docker-compose-examples/mcp/python_utils/"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "focus": false,
        "clear": true,
        "echo": true,
        "showReuseMessage": false
      }
    },
    {
      "label": "Python: Test",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "--python",
        "3.14t",
        "pytest",
        "docker-compose-examples/mcp/python_utils/tests/",
        "-v",
        "--tb=short"
      ],
      "problemMatcher": {
        "owner": "pytest",
        "source": "pytest",
        "fileLocation": "relative",
        "pattern": [
          {
            "regexp": "^(.+?):(\\d+):\\s+(FAILED|ERROR|AssertionError)(.*)$",
            "file": 1,
            "line": 2,
            "severity": 3,
            "message": 4
          },
          {
            "regexp": "^(FAILED|ERROR)\\s+(.+?)::(.+?)(?:\\s+-\\s+(.*))?$",
            "file": 2,
            "message": 4,
            "kind": "file"
          }
        ]
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": false,
        "clear": true,
        "echo": true,
        "showReuseMessage": false
      }
    },
    {
      "label": "Python: Coverage",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "--python",
        "3.14t",
        "pytest",
        "docker-compose-examples/mcp/python_utils/tests/",
        "--cov=react_scuba_utils",
        "--cov-report=html",
        "--cov-report=term-missing"
      ],
      "problemMatcher": [],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "clear": true,
        "echo": true,
        "showReuseMessage": false
      }
    },
    {
      "label": "Python: Quality Check",
      "dependsOn": ["Python: Ruff Lint", "Python: isort Check", "Python: Test"],
      "dependsOrder": "sequence",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true,
        "clear": true
      }
    },
    {
      "label": "Docker: Build Basic Stack",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "-f",
        "docker-compose-examples/basic-stack/docker-compose.yml",
        "build"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "clear": true,
        "echo": true,
        "showReuseMessage": false
      }
    },
    {
      "label": "Docker: Up Basic Stack",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "-f",
        "docker-compose-examples/basic-stack/docker-compose.yml",
        "up",
        "-d"
      ],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Container.*Starting.*$",
          "endsPattern": "^.*Container.*Started.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "clear": false,
        "echo": true,
        "showReuseMessage": false
      }
    },
    {
      "label": "Docker: Down Basic Stack",
      "type": "shell",
