    {
      "label": "MCP: Start Server",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "--python",
        "3.14t",
        "python",
        "-m",
        "react_scuba_utils.cli",
        "serve"
      ],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Starting.*$",
          "endsPattern": "^.*Server running.*$"
