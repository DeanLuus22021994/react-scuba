{
  "version": "0.2.0",
  "configurations": [
    // ============================================================================
    // Node.js / TypeScript Debugging (Turbo Monorepo)
    // ============================================================================
    {
      "name": "üöÄ Dev: Web + API (Full Stack)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/server",
      "console": "integratedTerminal",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "react-scuba:*"
      },
      "preLaunchTask": "Build Project",
      "serverReadyAction": {
        "pattern": "Local:\\s+https?://[^:]+:(\\d+)",
        "uriFormat": "http://localhost:%s",
        "action": "debugWithChrome"
      },
      "presentation": {
        "hidden": false,
        "group": "fullstack",
        "order": 1
      }
    },
    {
      "name": "üåê Dev: Web App (Vite)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/server/apps/web",
      "console": "integratedTerminal",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "env": {
        "NODE_ENV": "development",
        "BROWSER": "none"
      },
      "serverReadyAction": {
        "pattern": "Local:\\s+https?://[^:]+:(\\d+)",
        "uriFormat": "http://localhost:%s",
        "action": "openExternally"
      },
      "presentation": {
        "hidden": false,
        "group": "frontend",
        "order": 1
      }
    },
    {
      "name": "üîß Dev: API Server (Express)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/server/apps/api",
      "console": "integratedTerminal",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--inspect", "src/index.js"],
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "env": {
        "NODE_ENV": "development",
        "PORT": "5000",
        "DEBUG": "express:*"
      },
      "resolveSourceMapLocations": [
        "${workspaceFolder}/server/apps/api/**",
        "!**/node_modules/**"
      ],
      "presentation": {
        "hidden": false,
        "group": "backend",
        "order": 1
      }
    },
    {
      "name": "üîç Attach: Node Process",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "restart": true,
      "presentation": {
        "hidden": false,
        "group": "attach",
        "order": 1
      }
    },

    // ============================================================================
    // Browser Debugging (Chrome DevTools Protocol)
    // ============================================================================
    {
      "name": "üåê Chrome: Web App",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3001",
      "webRoot": "${workspaceFolder}/server/apps/web/src",
      "userDataDir": "${workspaceFolder}/.vscode/chrome-profile",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./*": "${webRoot}/*",
        "webpack:///src/*": "${webRoot}/*",
        "webpack:///*": "*",
        "/./*": "${webRoot}/*"
      },
      "trace": false,
      "presentation": {
        "hidden": false,
        "group": "browser",
        "order": 1
      }
    },
    {
      "name": "üåê Edge: Web App",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:3001",
      "webRoot": "${workspaceFolder}/server/apps/web/src",
      "userDataDir": "${workspaceFolder}/.vscode/edge-profile",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./*": "${webRoot}/*",
        "webpack:///src/*": "${webRoot}/*",
        "webpack:///*": "*",
        "/./*": "${webRoot}/*"
      },
      "presentation": {
        "hidden": false,
        "group": "browser",
        "order": 2
      }
    },
    {
      "name": "üîó Attach: Chrome",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}/server/apps/web/src",
      "sourceMaps": true,
      "trace": false,
      "presentation": {
        "hidden": false,
        "group": "attach",
        "order": 2
      }
    },

    // ============================================================================
    // Python Debugging (Python 3.14t with UV)
    // ============================================================================
    {
      "name": "üêç MCP Server (Python)",
      "type": "debugpy",
      "request": "launch",
      "module": "react_scuba_utils.cli",
      "args": ["serve"],
      "cwd": "${workspaceFolder}/docker-compose-examples/mcp/python_utils",
      "python": "${config:python.defaultInterpreterPath}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "stopOnEntry": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/docker-compose-examples/mcp/python_utils",
        "PYTHONDONTWRITEBYTECODE": "1",
        "PYTHONUTF8": "1"
      },
      "preLaunchTask": "Python Quality Check",
      "presentation": {
        "hidden": false,
        "group": "python",
        "order": 1
      }
    },
    {
      "name": "üêç FastAPI Server (Uvicorn)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "react_scuba_utils.api:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload",
        "--log-level",
        "debug"
      ],
      "cwd": "${workspaceFolder}/docker-compose-examples/mcp/python_utils",
      "python": "${config:python.defaultInterpreterPath}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/docker-compose-examples/mcp/python_utils",
        "PYTHONDONTWRITEBYTECODE": "1",
        "PYTHONUTF8": "1"
      },
      "serverReadyAction": {
        "pattern": "Uvicorn running on (https?://[^:]+:(\\d+))",
        "uriFormat": "http://localhost:%s/docs",
        "action": "openExternally"
      },
      "presentation": {
        "hidden": false,
        "group": "python",
        "order": 2
      }
    },
    {
      "name": "üß™ Pytest: All Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "docker-compose-examples/mcp/python_utils/tests/",
        "-v",
        "--tb=short",
        "--color=yes"
      ],
      "cwd": "${workspaceFolder}",
      "python": "${config:python.defaultInterpreterPath}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/docker-compose-examples/mcp/python_utils",
        "PYTEST_CURRENT_TEST": ""
      },
      "presentation": {
        "hidden": false,
        "group": "testing",
        "order": 1
      }
    },
    {
      "name": "üß™ Pytest: Current File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["${file}", "-v", "--tb=short", "--color=yes"],
      "cwd": "${workspaceFolder}",
      "python": "${config:python.defaultInterpreterPath}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/docker-compose-examples/mcp/python_utils"
      },
      "presentation": {
        "hidden": false,
        "group": "testing",
        "order": 2
      }
    },
    {
      "name": "üß™ Pytest: Coverage",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "docker-compose-examples/mcp/python_utils/tests/",
        "--cov=react_scuba_utils",
        "--cov-report=html",
        "--cov-report=term-missing",
        "-v"
      ],
      "cwd": "${workspaceFolder}",
      "python": "${config:python.defaultInterpreterPath}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/docker-compose-examples/mcp/python_utils"
      },
      "postDebugTask": "open_coverage_report",
      "presentation": {
        "hidden": false,
        "group": "testing",
        "order": 3
      }
    },
    {
      "name": "üîó Attach: Python (Port 5678)",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/docker-compose-examples/mcp/python_utils",
          "remoteRoot": "/app"
        }
      ],
      "justMyCode": false,
      "presentation": {
        "hidden": false,
        "group": "attach",
        "order": 3
      }
    },

    // ============================================================================
    // Docker Container Debugging
    // ============================================================================
    {
      "name": "üê≥ Docker: MCP Container",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5679
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/docker-compose-examples/mcp/python_utils",
          "remoteRoot": "/app"
        }
      ],
      "justMyCode": false,
      "presentation": {
        "hidden": false,
        "group": "docker",
        "order": 1
      }
    },

    // ============================================================================
    // Vitest Debugging (TypeScript/React)
    // ============================================================================
    {
      "name": "üß™ Vitest: Web Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/server/apps/web",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test", "--", "--run"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/server/apps/web/**",
        "!**/node_modules/**"
      ],
      "presentation": {
        "hidden": false,
        "group": "testing",
        "order": 4
      }
    },
    {
      "name": "üß™ Vitest: Current File",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/server/apps/web",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test", "--", "--run", "${fileBasename}"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "sourceMaps": true,
      "presentation": {
        "hidden": false,
        "group": "testing",
        "order": 5
      }
    }
  ],
  
  // ============================================================================
  // Compound Launch Configurations
  // ============================================================================
  "compounds": [
    {
      "name": "üöÄ Full Stack Debug",
      "configurations": ["üîß Dev: API Server (Express)", "üåê Chrome: Web App"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "compounds",
        "order": 1
      }
    },
    {
      "name": "üêç Python Full Stack",
      "configurations": ["üêç FastAPI Server (Uvicorn)", "üêç MCP Server (Python)"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "compounds",
        "order": 2
      }
    },
    {
      "name": "üß™ All Tests",
      "configurations": ["üß™ Vitest: Web Tests", "üß™ Pytest: All Tests"],
      "stopAll": false,
      "presentation": {
        "hidden": false,
        "group": "compounds",
        "order": 3
      }
    }
  ]
}
