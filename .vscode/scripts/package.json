{
  "name": "@react-scuba/vscode-scripts",
  "version": "1.0.0",
  "description": "Enterprise-grade VS Code workspace automation scripts for React Scuba multi-tenant platform",
  "type": "module",
  "private": true,
  "author": {
    "name": "React Scuba Development Team",
    "email": "dev@react-scuba.com"
  },
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DeanLuus22021994/react-scuba.git",
    "directory": ".vscode/scripts"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "workspace:setup": "node src/config/merge-configs.js",
    "workspace:init": "bash src/setup/setup-workspace.sh",
    "workspace:validate": "node src/validation/validate-structure.js",
    "workspace:clean": "node src/maintenance/clean-workspace.js",
    "typescript:restart": "pwsh -ExecutionPolicy Bypass -File src/development/restart-ts-server.ps1",
    "lint": "node src/validation/lint-scripts.js",
    "test": "node src/validation/test-all.js",
    "docs:generate": "node src/documentation/generate-docs.js",
    "hooks:install": "node src/git/install-hooks.js",
    "mcp:validate": "node src/mcp/validate-servers.js",
    "copilot:context": "node src/copilot/manage-context.js",
    "toc:validate": "node src/documentation/validate-toc.js"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "glob": "^11.0.0",
    "yaml": "^2.4.5"
  },
  "keywords": [
    "vscode",
    "workspace",
    "automation",
    "multi-tenant",
    "development-tools",
    "enterprise"
  ]
}
