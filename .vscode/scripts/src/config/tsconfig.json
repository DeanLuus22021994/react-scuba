{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "../**/*.ts",
    "../**/*.js",
    "*.ts",
    "*.js"
  ],
  "exclude": [
    "../../node_modules",
    "../../legacy"
  ]
}
