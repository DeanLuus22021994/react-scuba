{
  "$schema": "./schemas/vscode-settings-schema.json",
  "_comment": "React Scuba Workspace - Auto-Accept & Bleeding Edge Features (October 2025)",

  // === BLEEDING EDGE AUTO-ACCEPT FEATURES ===
  "workbench.experimental.featureFlags": {
    "promptlessMode": true,
    "autoAcceptDialogs": true,
    "silentInstallation": true
  },

  // Disable all confirmation dialogs (auto-accept everything)
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.autofetchPeriod": 180,
  "git.confirmEmptyCommits": false,
  "extensions.autoCheckUpdates": true,
  "extensions.autoUpdate": true,
  "extensions.ignoreRecommendations": false,
  "update.mode": "start",
  "update.enableWindowsBackgroundUpdates": true,

  // Auto-save for seamless development
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 500,
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "workbench.welcome.enabled": false,

  // Turbo monorepo configuration
  "turbo.enabled": true,
  "turbo.ui.enabled": true,
  "turbo.telemetry.enabled": false,

  // === TYPESCRIPT BLEEDING EDGE CONFIGURATION ===
  "typescript.tsserver.maxTsServerMemory": 16384,
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  "typescript.tsserver.experimental.enableWorkspaceDiagnostics": true,
  "typescript.tsserver.experimental.useVsCodeWatcher": true,
  "typescript.tsserver.experimental.enableRegionDiagnostics": true,
  "typescript.tsserver.useSyntaxServer": "auto",
  "typescript.tsserver.watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeDirectories": ["**/node_modules", "**/.git", "**/dist", "**/build", "**/.turbo"]
  },
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.workspaceSymbols.scope": "allOpenProjects",
  "typescript.tsserver.useSeparateSyntaxServer": true,
  "files.watcherExclude": {
    "**/server/node_modules/**": true,
    "**/server/apps/*/node_modules/**": true,
    "**/server/packages/*/node_modules/**": true,
    "**/server/apps/*/.turbo/**": true,
    "**/server/packages/*/.turbo/**": true,
    "**/.turbo/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.next/**": true,
    "**/.vite/**": true
  },
  "search.exclude": {
    "**/clients/*/node_modules": true,
    "**/clients/*/dist": true,
    "**/clients/*/build": true,
    "**/clients/*/images/*.{jpg,jpeg,png,gif,webp}": true
  },
  "npm.packageManager": "npm",
  "npm.enableRunFromFolder": true,
  "npm.scriptExplorerAction": "run",

  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "config.json": "README.md, .env*, images/"
  },
  "json.schemas": [
    {
      "fileMatch": [
        "server/clients/*/config.json",
        "server/clients/_template/config.json"
      ],
      "url": "./.vscode/schemas/client-config.schema.json"
    }
  ],
  "files.associations": {
    "**/clients/*/config.json": "json",
    "**/clients/_template/**": "json"
  },
  "files.exclude": {
    "**/clients/*/images/*.{jpg,jpeg,png,gif,webp,svg}": false,
    "**/clients/_template/images/": true
  },
  "tailwindCSS.experimental.configFile": {
    "server/apps/web/tailwind.config.js": "server/apps/web/**/*.{js,ts,jsx,tsx,vue,html}",
    "server/clients/*/tailwind.config.js": "server/clients/*/**/*.{js,ts,jsx,tsx,vue,html}"
  },
  "css.lint.unknownProperties": "ignore",
  "css.lint.validProperties": [],
  "css.customData": [
    ".vscode/schemas/tailwind-client-theme.json"
  ],
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.paths": true,
  "typescript.preferences.resolveJsonModule": true,
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,

  // Force TypeScript to prioritize .ts files over .js
  "typescript.preferences.useLabelDetailsInCompletionEntries": true,
  "typescript.preferences.allowIncompleteCompletions": true,
  "typescript.preferences.allowRenameOfImportPath": true,
  "typescript.tsc.autoDetect": "on",
  "typescript.npm": "on",
  "javascript.preferences.useLabelDetailsInCompletionEntries": true,
  "javascript.preferences.allowIncompleteCompletions": true,
  "javascript.preferences.allowRenameOfImportPath": true,

  // === BIOME BLEEDING EDGE CONFIGURATION ===
  "biome.enabled": true,
  "biome.searchInPath": true,
  "biome.lsp.bin": "server/node_modules/@biomejs/biome/bin/biome",
  "biome.experimental.enableCodeActions": true,
  "biome.experimental.enableRefactoring": true,

  // === GITHUB COPILOT BLEEDING EDGE FEATURES ===
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "github.copilot.chat.participants.enabled": true,
  "github.copilot.chat.workspaceAgent.enabled": true,
  "github.copilot.chat.terminalAgent.enabled": true,
  "github.copilot.chat.vscodeAgent.enabled": true,
  "github.copilot.chat.gitAgent.enabled": true,
  "github.copilot.chat.testGeneration.enabled": true,
  "github.copilot.chat.agent.autoFix": true,
  "github.copilot.chat.agent.currentEditorContext.enabled": true,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.search.enabled": true,
  "github.copilot.chat.reviewAgent.enabled": true,
  "github.copilot.chat.setupTests.enabled": true,
  "github.copilot.chat.useResponsesApi": true,
  "github.copilot.chat.responsesApiReasoningEffort": "high",
  "github.copilot.chat.responsesApiReasoningSummary": "detailed",
  "github.copilot.chat.newWorkspaceCreation.enabled": true,
  "github.copilot.chat.useProjectTemplates": true,
  "github.copilot.chat.copilotDebugCommand.enabled": true,
  "github.copilot.chat.customInstructionsInSystemMessage": true,
  "github.copilot.chat.editor.temporalContext.enabled": true,
  "github.copilot.chat.edits.temporalContext.enabled": true,
  "github.copilot.chat.edits.suggestRelatedFilesForTests": true,
  "github.copilot.chat.edits.suggestRelatedFilesFromGitHistory": true,
  "github.copilot.chat.imageUpload.enabled": true,
  "github.copilot.chat.reviewSelection.enabled": true,
  "github.copilot.chat.summarizeAgentConversationHistory.enabled": true,
  "github.copilot.chat.followUps.enabled": true,
  "github.copilot.chat.contextSelection.enabled": true,
  "github.copilot.chat.verboseContext": false,

  // EXPERIMENTAL FEATURES (VS Code Insiders)
  "github.copilot.chat.anthropic.thinking.enabled": true,
  "github.copilot.chat.anthropic.thinking.maxTokens": 16384,
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.nextEditSuggestions.allowWhitespaceOnlyChanges": false,
  "github.copilot.nextEditSuggestions.fixes": true,
  "github.copilot.chat.edits.enableMultiFileEdits": true,
  "github.copilot.chat.edits.confirmations": "never",
  "github.copilot.chat.indexing.enabled": true,
  "github.copilot.chat.documentationSearch.enabled": true,
  "github.copilot.chat.modelSelection.enabled": true,
  "github.copilot.chat.preferredModel": "claude-sonnet-4.5",
  "github.copilot.editor.enableCodeActions": true,
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.editor.iterativeFixing.enabled": true,
  "github.copilot.renameSuggestions.triggerAutomatically": true,
  "github.copilot.inlineSuggest.enable": true,
  "github.copilot.editor.inlineSuggest.enabled": true,
  "github.copilot.chat.languageModelTools.enabled": true,

  // === BLEEDING EDGE WORKSPACE FEATURES ===
  "workbench.experimental.enableNewProfilesUI": true,
  "workbench.experimental.cloudChanges.autoSync": "on",
  "workbench.experimental.cloudChanges.continueOn": "prompt",
  "editor.experimental.asyncTokenization": true,
  "editor.experimental.asyncTokenizationLogging": false,
  "editor.experimental.asyncTokenizationVerification": false,
  "diffEditor.experimental.showMoves": true,
  "diffEditor.experimental.useBetterFolding": true,
  "editor.experimentalGpuAcceleration": "on",
  "window.titleBarStyle": "custom",
  "python-envs.pythonProjects": ["docker-compose-examples/mcp/python_utils"]
}
