{
  "$schema": "./schemas/vscode-settings-schema.json",
  "_comment": "React Scuba Workspace - Auto-Accept & Bleeding Edge Features (October 2025)",

  // === BLEEDING EDGE AUTO-ACCEPT FEATURES ===
  "workbench.experimental.featureFlags": {
    "promptlessMode": true,
    "autoAcceptDialogs": true,
    "silentInstallation": true
  },

  // Disable all confirmation dialogs (auto-accept everything)
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.autofetchPeriod": 180,
  "git.confirmEmptyCommits": false,
  "extensions.autoCheckUpdates": true,
  "extensions.autoUpdate": true,
  "extensions.ignoreRecommendations": false,
  "update.mode": "start",
  "update.enableWindowsBackgroundUpdates": true,

  // Auto-save for seamless development
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 500,
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "workbench.welcome.enabled": false,

  // === TYPESCRIPT BLEEDING EDGE CONFIGURATION ===
  "typescript.tsserver.maxTsServerMemory": 16384,
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  "typescript.tsserver.experimental.enableWorkspaceDiagnostics": true,
  "typescript.tsserver.experimental.useVsCodeWatcher": true,
  "typescript.tsserver.experimental.enableRegionDiagnostics": true,
  "typescript.tsserver.useSyntaxServer": "auto",
  "typescript.tsserver.watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeDirectories": ["**/node_modules", "**/.git", "**/dist", "**/build", "**/coverage"]
  },
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.workspaceSymbols.scope": "allOpenProjects",
  "typescript.tsserver.useSeparateSyntaxServer": true,
  "files.watcherExclude": {
    "**/server/node_modules/**": true,
    "**/server/apps/*/node_modules/**": true,
    "**/server/packages/*/node_modules/**": true,
    "**/server/apps/*/coverage/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.next/**": true,
    "**/.vite/**": true
  },
  "search.exclude": {
    "**/clients/*/node_modules": true,
    "**/clients/*/dist": true,
    "**/clients/*/build": true,
    "**/clients/*/images/*.{jpg,jpeg,png,gif,webp}": true
  },
  "npm.packageManager": "npm",
  "npm.enableRunFromFolder": true,
  "npm.scriptExplorerAction": "run",

  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "config.json": "README.md, .env*, images/"
  },
  "json.schemas": [
    {
      "fileMatch": [
        "server/clients/*/config.json",
        "server/clients/_template/config.json"
      ],
      "url": "./.vscode/schemas/client-config.schema.json"
    }
  ],
  "files.associations": {
    "**/clients/*/config.json": "json",
    "**/clients/_template/**": "json",
    "**/k8s/charts/**/templates/*.yaml": "helm",
    "**/k8s/charts/**/templates/*.tpl": "helm",
    ".devcontainer/infrastructure/**/*.yml": "yaml",
    "k8s/policies/**/*.yaml": "yaml",
    "k8s/overlays/*/api-patches.yaml": "yaml",
    "k8s/overlays/*/web-patches.yaml": "yaml",
    "k8s/base/monitoring/prometheus.yaml": "yaml"
  },
  "files.exclude": {
    "**/clients/*/images/*.{jpg,jpeg,png,gif,webp,svg}": false,
    "**/clients/_template/images/": true
  },
  "tailwindCSS.experimental.configFile": {
    "server/apps/web/tailwind.config.js": "server/apps/web/**/*.{js,ts,jsx,tsx,vue,html}",
    "server/clients/*/tailwind.config.js": "server/clients/*/**/*.{js,ts,jsx,tsx,vue,html}"
  },
  "css.lint.unknownProperties": "ignore",
  "css.lint.validProperties": [],
  "css.customData": [
    ".vscode/schemas/tailwind-client-theme.json"
  ],
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.paths": true,
  "typescript.preferences.resolveJsonModule": true,
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,

  // Force TypeScript to prioritize .ts files over .js
  "typescript.preferences.useLabelDetailsInCompletionEntries": true,
  "typescript.preferences.allowIncompleteCompletions": true,
  "typescript.preferences.allowRenameOfImportPath": true,
  "typescript.tsc.autoDetect": "on",
  "typescript.npm": "on",
  "javascript.preferences.useLabelDetailsInCompletionEntries": true,
  "javascript.preferences.allowIncompleteCompletions": true,
  "javascript.preferences.allowRenameOfImportPath": true,

  // === NATIVE LANGUAGE SERVER CONFIGURATION ===
  // Using built-in TypeScript and JavaScript language servers
  // No external linting tools required

  // === GITHUB COPILOT BLEEDING EDGE FEATURES ===
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "github.copilot.chat.participants.enabled": true,
  "github.copilot.chat.workspaceAgent.enabled": true,
  "github.copilot.chat.terminalAgent.enabled": true,
  "github.copilot.chat.vscodeAgent.enabled": true,
  "github.copilot.chat.gitAgent.enabled": true,
  "github.copilot.chat.testGeneration.enabled": true,
  "github.copilot.chat.agent.autoFix": true,
  "github.copilot.chat.agent.currentEditorContext.enabled": true,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.search.enabled": true,
  "github.copilot.chat.reviewAgent.enabled": true,
  "github.copilot.chat.setupTests.enabled": true,
  "github.copilot.chat.useResponsesApi": true,
  "github.copilot.chat.responsesApiReasoningEffort": "high",
  "github.copilot.chat.responsesApiReasoningSummary": "detailed",
  "github.copilot.chat.newWorkspaceCreation.enabled": true,
  "github.copilot.chat.useProjectTemplates": true,
  "github.copilot.chat.copilotDebugCommand.enabled": true,
  "github.copilot.chat.customInstructionsInSystemMessage": true,
  "github.copilot.chat.editor.temporalContext.enabled": true,
  "github.copilot.chat.edits.temporalContext.enabled": true,
  "github.copilot.chat.edits.suggestRelatedFilesForTests": true,
  "github.copilot.chat.edits.suggestRelatedFilesFromGitHistory": true,
  "github.copilot.chat.imageUpload.enabled": true,
  "github.copilot.chat.reviewSelection.enabled": true,
  "github.copilot.chat.summarizeAgentConversationHistory.enabled": true,
  "github.copilot.chat.followUps.enabled": true,
  "github.copilot.chat.contextSelection.enabled": true,
  "github.copilot.chat.verboseContext": false,

  // EXPERIMENTAL FEATURES (VS Code Insiders)
  "github.copilot.chat.anthropic.thinking.enabled": true,
  "github.copilot.chat.anthropic.thinking.maxTokens": 16384,
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.nextEditSuggestions.allowWhitespaceOnlyChanges": false,
  "github.copilot.nextEditSuggestions.fixes": true,
  "github.copilot.chat.edits.enableMultiFileEdits": true,
  "github.copilot.chat.edits.confirmations": "never",
  "github.copilot.chat.indexing.enabled": true,
  "github.copilot.chat.documentationSearch.enabled": true,
  "github.copilot.chat.modelSelection.enabled": true,
  "github.copilot.chat.preferredModel": "claude-sonnet-4.5",
  "github.copilot.editor.enableCodeActions": true,
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.editor.iterativeFixing.enabled": true,
  "github.copilot.renameSuggestions.triggerAutomatically": true,
  "github.copilot.inlineSuggest.enable": true,
  "github.copilot.editor.inlineSuggest.enabled": true,
  "github.copilot.chat.languageModelTools.enabled": true,

  // === BLEEDING EDGE WORKSPACE FEATURES ===
  "workbench.experimental.enableNewProfilesUI": true,
  "workbench.experimental.cloudChanges.autoSync": "on",
  "workbench.experimental.cloudChanges.continueOn": "prompt",
  "editor.experimental.asyncTokenization": true,
  "editor.experimental.asyncTokenizationLogging": false,
  "editor.experimental.asyncTokenizationVerification": false,
  "diffEditor.experimental.showMoves": true,
  "diffEditor.experimental.useBetterFolding": true,
  "editor.experimentalGpuAcceleration": "on",
  "window.titleBarStyle": "custom",
  "python-envs.pythonProjects": ["docker-compose-examples/mcp/python_utils"],

  // === PYTHON 3.14T FREE-THREADING CONFIGURATION (PERFORMANCE OPTIMIZED) ===
  "python.defaultInterpreterPath": "C:\\Users\\deanl.MSI\\.local\\bin\\python3.14t.exe",
  "python.interpreter.infoVisibility": "onFailure",
  "python.terminal.activateEnvironment": false,
  "python.terminal.activateEnvInCurrentTerminal": false,

  // DISABLE CONTINUOUS ANALYSIS - MAJOR PERFORMANCE KILLER
  "python.analysis.typeCheckingMode": "off",
  "python.analysis.autoImportCompletions": false,
  "python.analysis.include": [],
  "python.analysis.exclude": [
    "**",
    "docker-compose-examples/**",
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**"
  ],
  "python.analysis.extraPaths": [],
  "python.analysis.diagnosticMode": "openFilesOnly",
  "python.analysis.indexing": false,
  "python.analysis.packageIndexDepths": [],
  "python.analysis.completeFunctionParens": false,
  "python.analysis.autoSearchPaths": false,
  "python.analysis.stubPath": "",
  "python.analysis.typeshedPaths": [],
  "python.analysis.useLibraryCodeForTypes": false,

  // DISABLE PYLANCE INTENSIVE FEATURES
  "pylance.insidersChannel": "off",
  "python.languageServer": "None",
  "python.jediEnabled": false,

  // DISABLE LINTING AND FORMATTING (USE RUFF ONLY WHEN NEEDED)
  "python.linting.enabled": false,
  "python.formatting.provider": "none",
  "ruff.enable": false,
  "ruff.organizeImports": false,
  "ruff.fixAll": false,

  // DISABLE TESTING AUTO-DISCOVERY
  "python.testing.pytestEnabled": false,
  "python.testing.unittestEnabled": false,
  "python.testing.autoTestDiscoverOnSaveEnabled": false,

  // Vitest Extension Configuration
  "vitest.enable": true,
  "vitest.commandLine": "npm test",
  "vitest.rootConfig": "./server/apps/web/vite.config.js",
  "vitest.disableWorkspaceWarning": true,

  // === MARKDOWN LINTING CONFIGURATION ===
  // Disable specific markdown rules for AI-optimized context documentation
  // These rules interfere with well-structured Copilot instruction files
  "markdownlint.config": {
    "MD022": false,
    "MD032": false,
    "MD031": false,
    "MD040": false
  },

  // === YAML VALIDATION CONFIGURATION ===
  // Precise false positive suppression without disabling validation overhead
  "yaml.schemaStore.enable": true,
  "yaml.format.enable": true,
  "yaml.completion": true,
  "yaml.hover": true,

  // Custom schema mappings for Kubernetes resources
  "yaml.schemas": {
    "file:///c%3A/Users/deanl.MSI/.vscode-insiders/extensions/continue.continue-1.3.22-win32-x64/config-yaml-schema.json": [
      ".continue/**/*.yaml"
    ],
    "https://raw.githubusercontent.com/compose-spec/compose-spec/master/schema/compose-spec.json": [
      "docker-compose.yml",
      "docker-compose.*.yml"
    ],
    "https://json.schemastore.org/kustomization.json": [
      "**/kustomization.yaml",
      "**/kustomization.yml"
    ],
    "kubernetes": [
      "k8s/base/**/*.yaml",
      "k8s/overlays/**/*.yaml",
      "!k8s/policies/**/*.yaml",
      "!k8s/charts/**/*.yaml",
      "!k8s/argocd/**/*.yaml",
      "!k8s/base/networking/cert-manager.yaml",
      "!k8s/base/linkerd/**/*.yaml",
      "!k8s/base/databases/postgres-cluster.yaml",
      "!k8s/base/monitoring/prometheus.yaml",
      "!k8s/base/monitoring/servicemonitors/*.yaml",
      "!**/kustomization.yaml",
      "!k8s/overlays/*/api-patches.yaml",
      "!k8s/overlays/*/web-patches.yaml"
    ]
  },

  // Disable specific YAML validations for known false positives
  "yaml.customTags": [
    "!GetAtt sequence",
    "!Base64",
    "!Cidr sequence",
    "!FindInMap sequence",
    "!GetAZs",
    "!ImportValue",
    "!Join sequence",
    "!Select sequence",
    "!Split sequence",
    "!Sub"
  ],

  // Suppress specific YAML diagnostic codes
  "yaml.disableAdditionalProperties": false,
  "yaml.maxItemsComputed": 10000,
  "yaml.disableDefaultProperties": false,
  "yaml.schemaStore.url": "https://www.schemastore.org/api/json/catalog.json",

  // Configure YAML validation severity overrides
  "yaml.style.flowMapping": "allow",
  "yaml.style.flowSequence": "allow",
  "yaml.format.bracketSpacing": true,
  "yaml.format.proseWrap": "preserve",
  "yaml.keyOrdering": false,

  // Disable validation entirely for files with known false positives
  "yaml.validate": true,
  "yaml.disableSchemaValidation": [
    "k8s/policies/**/*.yaml",
    "k8s/overlays/*/api-patches.yaml",
    "k8s/overlays/*/web-patches.yaml",
    "k8s/base/monitoring/prometheus.yaml",
    ".devcontainer/infrastructure/**/*.yml"
  ],

  // === CLOUD CODE CONFIGURATION ===
  // Suppress CRD validation warnings for known operators
  "cloudcode.kubernetes": {
    "useMinikube": false,
    "minikubeProfile": "kind-react-scuba",
    "showBuildStatusNotifications": false,
    "showPushStatusNotifications": false
  },

  // Suppress specific Cloud Code diagnostic codes
  "cloudcode.suppressDiagnostics": [
    "undefined",  // "This apiVersion and/or kind does not reference a schema known by Cloud Code"
    "513"         // "Property X is not allowed" (multi-document YAML confusion)
  ],

  // === DOCKER COMPOSE VALIDATION ===
  // Allow compact YAML syntax in docker-compose files
  "docker-compose.files": [
    "docker-compose.yml",
    "docker-compose.*.yml",
    ".devcontainer/infrastructure/**/*.yml"
  ],

  // === FILE-SPECIFIC VALIDATION EXCLUSIONS ===
  // Exclude specific files from schema validation that have known false positives
  "files.readonlyInclude": {},
  "files.readonlyExclude": {
    // Kubernetes CRD files (ArgoCD, Linkerd, Zalando Postgres, Prometheus Operator, cert-manager)
    "k8s/argocd/**/*.yaml": false,
    "k8s/base/linkerd/**/*.yaml": false,
    "k8s/base/databases/postgres-cluster.yaml": false,
    "k8s/base/monitoring/prometheus.yaml": false,
    "k8s/base/monitoring/servicemonitors/*.yaml": false,
    "k8s/base/networking/cert-manager.yaml": false,

    // Kustomize strategic merge patches (intentionally partial specs)
    "k8s/overlays/*/api-patches.yaml": false,
    "k8s/overlays/*/web-patches.yaml": false,

    // NetworkPolicy files (validator doesn't understand K8s NetworkPolicy structure)
    "k8s/policies/*.yaml": false,

    // KIND cluster config (uses cluster.x-k8s.io/v1alpha4 schema)
    ".devcontainer/kind/cluster-config.yaml": false
  },

  // === DIAGNOSTIC PROBLEM MATCHER CONFIGURATION ===
  // Suppress specific diagnostic patterns
  "problems.decorations.enabled": true,
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.formatOnSave": false,
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    }
  }
}
