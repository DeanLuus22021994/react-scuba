{
  "turbo.enabled": true,
  "turbo.ui.enabled": true,
  "turbo.telemetry.enabled": false,
  "typescript.tsserver.maxTsServerMemory": 12288,
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.workspaceSymbols.scope": "allOpenProjects",
  "typescript.tsserver.useSeparateSyntaxServer": true,
  "files.watcherExclude": {
    "**/server/node_modules/**": true,
    "**/server/apps/*/node_modules/**": true,
    "**/server/packages/*/node_modules/**": true,
    "**/server/apps/*/.turbo/**": true,
    "**/server/packages/*/.turbo/**": true,
    "**/.turbo/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.next/**": true,
    "**/.vite/**": true
  },
  "search.exclude": {
    "**/server/apps/*/dist": true,
    "**/server/packages/*/dist": true,
    "**/server/apps/*/build": true,
    "**/server/packages/*/build": true,
    "**/.turbo": true,
    "**/turbo.json": false,
    "**/package.json": false
  },
  "npm.packageManager": "npm",
  "npm.enableRunFromFolder": true,
  "npm.scriptExplorerAction": "run",
  "npm.enableScriptExplorer": true,
  "biome.enabled": true,
  "biome.searchInPath": true,
  "biome.lspBin": "server/node_modules/@biomejs/biome/bin/biome",
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "turbo.json": "turbo/",
    "package.json": "package-lock.json, pnpm-lock.yaml, yarn.lock, .npmrc, .yarnrc*",
    "tsconfig.json": "tsconfig.*.json, tsconfig.tsbuildinfo",
    "vite.config.*": "vitest.config.*, vitest.workspace.*, playwright.config.*",
    "tailwind.config.*": "postcss.config.*"
  }
}
