# Environment Configuration for React Scuba Development
# Copy this file to .env and configure as needed

# ==================================
# MCP Service Configuration
# ==================================

# Enable MCP persistent sidecar service
# Set to true to auto-start MCP service with devcontainer
# Set to false for manual activation (docker compose --profile mcp up -d)
ENABLE_MCP=false

# MCP HTTP Port (internal only, not published to host)
MCP_HTTP_PORT=9099

# MCP Protocol Version
MCP_PROTOCOL_VERSION=1.0.0

# MCP Service Discovery
MCP_DISCOVERY_ENABLED=true
MCP_HEALTH_WEBSOCKET_PORT=9097

# ==================================
# Database Configuration
# ==================================

# PostgreSQL
DOCKER_POSTGRES_PASSWORD=password
POSTGRES_USER=postgres
POSTGRES_DB=postgres

# MariaDB
MARIADB_PASSWORD=password
MARIADB_DATABASE=mcp_db

# ==================================
# Monitoring Configuration
# ==================================

# Grafana
GRAFANA_ADMIN_PASSWORD=admin

# ==================================
# Python Configuration
# ==================================

# Python GIL Mode (1 = enabled, 0 = disabled for free-threading)
PYTHON_GIL_MODE=1

# UV Package Manager
UV_SYSTEM_PYTHON=1

# Python Unbuffered Output
PYTHONUNBUFFERED=1

# ==================================
# Node.js Configuration
# ==================================

# Node Environment
NODE_ENV=development

# Turbo Configuration
TURBO_TELEMETRY_DISABLED=1

# ==================================
# GitHub Configuration
# ==================================

# GitHub Token for MCP GitHub Server
# GITHUB_TOKEN=your_github_personal_access_token_here

# GitHub Dynamic Toolsets
GITHUB_DYNAMIC_TOOLSETS=1

# ==================================
# VS Code Insiders Configuration
# ==================================

# VS Code Update Mechanism
# Options: user-controlled, automatic, disabled
VSCODE_UPDATE_MECHANISM=user-controlled

# VS Code Insiders Version Pinning
# Leave empty for latest, or specify version
VSCODE_INSIDERS_VERSION=latest

# ==================================
# Docker Configuration
# ==================================

# BuildKit
BUILDKIT_STEP_LOG_MAX_SIZE=10485760

# ==================================
# Network Configuration
# ==================================

# MCP Cluster Network
MCP_CLUSTER_SUBNET=172.28.0.0/16
MCP_CLUSTER_GATEWAY=172.28.0.1

# ==================================
# Volume Configuration
# ==================================

# Enable workspace-specific named volumes for dependency isolation
USE_NAMED_VOLUMES=true

# Container-local Turbo cache (no persistence across rebuilds)
TURBO_CACHE_LOCAL=true

# ==================================
# Development Workflow
# ==================================

# Enable real-time health notifications
MCP_REALTIME_NOTIFICATIONS=true

# Enable service discovery dashboard
MCP_DISCOVERY_DASHBOARD=true

# Enable VS Code status bar integration
VSCODE_STATUS_BAR_INTEGRATION=true
