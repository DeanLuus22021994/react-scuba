#!/bin/sh
# Pre-commit hook - validates code before commit

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "${YELLOW}🔍 Running pre-commit quality checks...${NC}"

cd server

# Check ESLint
echo "${YELLOW}📝 Checking ESLint...${NC}"
npm run lint > /tmp/lint.log 2>&1
if [ $? -ne 0 ]; then
  echo "${RED}❌ ESLint failed. Run 'npm run lint:fix' to fix issues.${NC}"
  cat /tmp/lint.log
  exit 1
fi
echo "${GREEN}✅ ESLint passed${NC}"

# Check Prettier
echo "${YELLOW}🎨 Checking Prettier formatting...${NC}"
npm run format:check > /tmp/format.log 2>&1
if [ $? -ne 0 ]; then
  echo "${RED}❌ Prettier formatting failed. Run 'npm run format' to fix.${NC}"
  cat /tmp/format.log
  exit 1
fi
echo "${GREEN}✅ Prettier formatting passed${NC}"

# Run tests
echo "${YELLOW}🧪 Running tests...${NC}"
npm test 2>&1 | tail -20
if [ $? -ne 0 ]; then
  echo "${RED}❌ Tests failed.${NC}"
  exit 1
fi
echo "${GREEN}✅ All tests passed${NC}"

echo "${GREEN}✅ All pre-commit checks passed!${NC}"
exit 0
