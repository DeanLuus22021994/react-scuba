{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // Node.js native ESM resolution (critical for Express 5 + ESM)
    "moduleResolution": "node16",
    "module": "Node16",

    // Node.js environment
    "lib": ["ES2022"],
    "types": ["node"],

    // Node.js requires actual emit
    "noEmit": false,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  }
}
