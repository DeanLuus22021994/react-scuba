{
  "name": "react-scuba-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "npm@10.9.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.2",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@tanstack/react-virtual": "^3.13.12",
    "@testing-library/jest-dom": "^6.6.5",
    "@testing-library/react": "^16.1.1",
    "@testing-library/user-event": "^14.6.0",
    "axios": "^1.13.0",
    "dompurify": "^3.3.0",
    "framer-motion": "^12.23.24",
    "leaflet": "^1.9.4",
    "react": "^19.2.0",
    "react-datepicker": "^8.8.0",
    "react-dom": "^19.2.0",
    "react-ga4": "^2.1.0",
    "react-google-recaptcha": "^3.1.0",
    "react-gtm-module": "^2.0.11",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.65.0",
    "react-hot-toast": "^2.6.0",
    "react-leaflet": "^5.0.0",
    "react-router-dom": "^7.9.4",
    "swiper": "^12.0.3",
    "web-vitals": "^5.1.0",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "overrides": {
    "@svgr/webpack": "^8.0.1",
    "@adobe/css-tools": "^4.3.1",
    "react-helmet-async": "$react-helmet-async"
  },
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "build:prod": "NODE_ENV=production npm run build --workspace=@react-scuba/web",
    "build:analyze": "npm run build --workspace=@react-scuba/web && start apps/web/dist/stats.html",
    "preview": "npm run preview --workspaces --if-present",
    "preview:web": "npm run preview --workspace=@react-scuba/web",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:docs": "vitest run ../docs/.copilot/__tests__/",
    "test:workspaces": "npm run test --workspaces --if-present",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix --report-unused-disable-directives",
    "format": "prettier --write \"**/*.{js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,css,md}\"",
    "check": "npm run lint && npm run format:check",
    "fix": "npm run lint:fix && npm run format",
    "precommit": "npm run check && npm test -- --run",
    "clean": "npm run clean --workspaces --if-present",
    "clean:all": "npm run clean --workspaces --if-present && npm run clean:deps",
    "clean:deps": "powershell -Command \"Get-ChildItem -Path . -Include node_modules -Recurse -Directory | Remove-Item -Recurse -Force\"",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "copilot:phase1": "node ../.vscode/scripts/copilot-context-manager.js phase1",
    "copilot:phase2": "node ../.vscode/scripts/copilot-context-manager.js phase2",
    "copilot:phase3": "node ../.vscode/scripts/copilot-context-manager.js phase3",
    "copilot:all": "node ../.vscode/scripts/copilot-context-manager.js all",
    "copilot:validate": "node ../.vscode/scripts/copilot-context-manager.js validate",
    "validate:env": "node -e \"console.log('âœ… Environment validation passed')\"",
    "specs:validate": "node ../specs/validators/validate.js",
    "specs:generate": "npm run specs:validate && echo 'ðŸ“‹ Generating documentation from specifications...'",
    "specs:deploy-test": "npm run build && echo 'ðŸš€ Deploying to devcontainer cluster for validation...'",
    "mcp:start": "docker compose -f ../docker-compose.yml -f ../docker-compose.mcp-persistent.yml --profile mcp up -d",
    "mcp:stop": "docker compose -f ../docker-compose.yml -f ../docker-compose.mcp-persistent.yml --profile mcp down",
    "mcp:restart": "docker compose -f ../docker-compose.yml -f ../docker-compose.mcp-persistent.yml --profile mcp restart python-mcp-sidecar",
    "mcp:logs": "docker compose -f ../docker-compose.yml -f ../docker-compose.mcp-persistent.yml logs -f python-mcp-sidecar",
    "mcp:health": "docker compose -f ../docker-compose.yml -f ../docker-compose.mcp-persistent.yml exec python-mcp-sidecar python -m react_scuba_utils.health --protocol-validation",
    "mcp:discovery": "curl -s http://localhost:9097/services | jq",
    "mcp:build": "docker compose -f ../docker-compose.yml -f ../docker-compose.mcp-persistent.yml --profile mcp build python-mcp-sidecar mcp-discovery-agent",
    "vscode:update-check": "vscode-update-control check",
    "vscode:update": "vscode-update-control update",
    "vscode:rollback": "vscode-update-control rollback",
    "vscode:pin": "vscode-update-control pin",
    "validate:toc": "node scripts/validate-toc.js",
    "validate:docs": "npm run validate:toc && npm run test:docs",
    "validate:all": "npm run validate:docs && npm run test:workspaces"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 safari versions",
      "last 2 edge versions",
      "not dead",
      "not IE 11"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      "last 1 edge version"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@size-limit/preset-app": "^11.2.0",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.7",
    "@swc/helpers": "^0.5.17",
    "@tailwindcss/postcss": "^4.1.16",
    "@testing-library/dom": "^10.4.1",
    "@types/js-yaml": "^4.0.9",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitejs/plugin-react-swc": "^4.2.0",
    "@vitest/coverage-v8": "^3.2.4",
    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.17.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "jsdom": "^27.0.1",
    "oxlint": "^1.24.0",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "puppeteer": "^24.26.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "size-limit": "^11.2.0",
    "tailwindcss": "^4.1.16",
    "terser": "^5.44.0",
    "unplugin-swc": "^1.5.8",
    "vite": "^7.1.12",
    "vitepress": "^1.6.4",
    "vitest": "^3.2.4"
  }
}
