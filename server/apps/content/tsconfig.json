{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../packages/config/tsconfig.base.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"types": ["node"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
