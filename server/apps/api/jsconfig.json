{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2020",
		"lib": ["ES2020"],
		"moduleResolution": "bundler",
		"allowJs": true,
		"checkJs": false,
		"noEmit": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "coverage"]
}
